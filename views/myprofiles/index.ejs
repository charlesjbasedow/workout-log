<%- include('../partials/html-head')  %> 
<%- include('../partials/nav')  %>   

<main>
  <h1><%= title %> </h1>
  <% if (myprofiles.length ) { %>
    <table>
      <thead>
        <tr>
          <th>Gender</th>
          <th>Age</th>
          <th>Height(in)</th>
        </tr>
      </thead>
      <tbody>
        <% myprofiles.forEach(myprofile => { %>
          <tr>
            <td><%= myprofile.gender %></td>
            <td><%= myprofile.age %></td>
            <td><%= myprofile.height %></td>
            <td><a href="/myprofiles/<%= myprofile._id %>">Goals</a></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <h2>No Profile Found</h2>
      <a 
      href="/myprofiles/new" <%- title === 'Create Profile' ? 'class="active"' : '' %>
    >Create Profile</a>
  <% } %>
</main>














